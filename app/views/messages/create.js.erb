$('#message-<%= @msg.receiver_id %> .close').click();
if('<%= @msg.title %>' =='' ||'<%= @msg.body %>'=='' ){
  $('body').prepend('<div class="alert alert-danger">傳送失敗<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
}
else{
  $('body').prepend('<div class="alert alert-success">傳送成功<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
}
$('#message-<%= @msg.receiver_id %> #message_body').val("");
$('#message-<%= @msg.receiver_id %> #message_title').val("");
