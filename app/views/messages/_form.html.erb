<div class="modal fade" id="message-<%= receiver.id  %>" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog" style="text-align: left;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">寄信</h4>
			</div>
			<div class="modal-body">
				<%= form_for Message.new, :html => {:class => "ui form"}, remote: true do |f| %>
					<div class="field">
						<%= f.label :title, '標題: ' %><br><br>
						<%= f.text_field :title %>
					</div>
					<input type='hidden' value='<%= receiver.id %>' name='message[receiver_id]' />
					<div class="field">
						<%= f.label :body, '內文: ' %><br><br>
						<%= f.text_area :body %><br><br>
					</div>
					<div class="field">
						<%= f.submit '傳送', :class =>"tiny ui black basic button", data: {confirm: "確定送出?" } %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
