<%= form_for Message.new, :html => {:class => "form"}, remote: true do |f| %>
	<div class="form-group">
		<%= f.label :title, '標題: ' %><br><br>
		<%= f.text_field :title , :class =>"form-control" %>
	</div>
	<input type='hidden' value='<%= receiver.id %>' name='message[receiver_id]' />
	<div class="form-group">
		<%= f.label :body, '內文: ' %><br><br>
		<%= f.text_area :body , :class =>"form-control" %><br><br>
	</div>
	<div class="form-group">
		<%= f.submit '傳送', :class =>"btn btn-default", data: {confirm: "確定送出?" } %>
	</div>
<% end %>
