<%= form_for Folder.new, :html => {:class => "form",:id => "folder-form"}  do |f| %>
	<div class="form-group">
		<%= f.label :title, '標題: ' %><br><br>
		<%= f.text_field :title , :class =>"form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :about, '介紹: ' %><br><br>
		<%= f.text_area :about , :class =>"form-control" %>
	</div>
	<div class="form-group text-center">
		<%= f.submit '傳送', :class =>"tiny ui black basic button", data: {confirm: "確定創立?" } %>
		<div class="tiny ui black basic button" id="folder-cancelbtn">取消</div>
	</div>
<% end %>
