<%= link_to image_tag('menu/logo.png', :id => "logo" ),root_path %>
  <ul class="sidemenu">
    <li class="biglink"><%= link_to '動態實況',posts_path %></li>
    <hr>
    <li class="biglink"><%= link_to '找設計師',users_path %></li>
    <hr>
    <% if current_user  %>
      <li class="biglink"><%= link_to current_user.name , current_user%></li>
      <% if current_user.role > 0  %>
        <hr>
        <li class="slink"><%= link_to '發文',new_post_path %></li>
        <li class="slink"><%= link_to '我的貼文', current_user %></li>
        <li class="slink"><%= link_to '資料夾',myfolder_path(current_user) %></li>
        <li class="slink"><%= link_to '追蹤的設計師',following_path(current_user)  %></li>
        <% if current_user.role == 2 %>
          <li class="slink"><%= link_to '管理用戶',adminuser_path %></li>
          <li class="slink"><%= link_to '管理文章',adminpost_path %></li>
        <% end %>
      <% else %>
        <li class="slink"><%= link_to '追蹤的設計師',following_path(current_user)  %></li>
      <% end %>
    <% else %>
      <li class="slink"><%= link_to '註冊', signup_path %></li>
    <% end %>
    <% if @show %>
      <li class="biglink"><%= link_to @user.name , @user %></li>
      <hr>
      <li class="slink"><%= link_to '資料夾' , myfolder_path(@user.id) %></li>
      <li class="slink"><%= link_to '追蹤的設計師' , following_path(@user.id) %></li>
    <% end %>
    <li class="slink" style="font-size:24px;">
      <a href="#"><i class="facebook icon"></i></a>
      <a href="#"><i class="instagram icon"></i></a>
    </li>
    <li class="slink" data-toggle="modal" data-target="#contract">
      會員條款與隱私權政策
    </li>
  </ul>
