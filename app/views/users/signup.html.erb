<div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
  <h1 class="text-center h1">註冊</h1>
  <% if @user.errors.count > 0 %>
  <p class="alert alert-warning formalert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <% @user.errors.each do |attr,msg|  %>
    <%= msg %><br>
    <% end %>
  </p>
  <% end %>
  <%= form_for @user, :html => {:class => "ui form"} do |f| %>
  <div class="field">
    <%= f.label :avatar, '大頭照' %>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :name, '用戶名' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, '密碼' %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, '確認密碼' %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :about, '個人簡介' %>
    <%= f.text_area :about ,:col=>"50", :rows=>"4" %>
  </div>
  <%= f.submit '註冊', :class =>"tiny ui black basic button" %>
  <% end %>
</div>
