<div class="user-meta">
  <%= image_tag @user.avatar.url(:avatar),:class => 'user-avatar'%>
  <p class="user-about">
    <%= @user.name %><br>
    <%= @user.about %>
  </p>
  <%= render'userbtn', user: @user %>
</div>
<div class="grid">
  <div class="grid-sizer"></div>
  <% @user.mypost.each_slice(4) do |posts| %>
    <% posts.each do |post| %>
      <div class="col-lg-3 col-md-3 col-sm-3 grid-item ui special cards" id="post-<%= post.id %> post-card" data-id="<%= post.id %>">
        <div class="card" style="margin:0px;">
          <div class="blurring dimmable image">
            <div class="ui dimmer post-show" data-toggle="modal" data-target="#postmodal" data-id="<%= post.id %>">
              <div class="content" style="font-size:10px;">
                <div class="center">
                  <span class="authorname"><%=link_to post.user.name , post.user %></span><br><br>
                  <i class="calendar icon"></i> <%= post.created_at.strftime("%Y/%m/%d") %><br><br>
                  <i class="heart red icon"></i><%= post.likes.count %>&nbsp;&nbsp;&nbsp;
                  <i class="unhide icon"></i><%= post.view %>&nbsp;&nbsp;&nbsp;
                  <i class="comment icon"></i><%= post.comments.count %>
                </div>
              </div>
            </div>
            <%= image_tag post.image.url , :class =>'postimg' %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="modal fade" id="postmodal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>

<script type="text/javascript">
  var grid = $('.grid').imagesLoaded(function () {
    grid.masonry({itemSelector: '.grid-item', columnWidth: '.grid-sizer', percentPosition: true});
  });

  $(document).ready(function(){
    /* ajax show */
    $('.post-show').on('click',function(){
      var ajaxurl = '/posts/' + this.getAttribute("data-id");
      $.ajax({
        url:ajaxurl,
        type: 'GET',
        success: function(response) {
          $('#postmodal .modal-content').prepend(response);
        }
      });
    });

    $('#postmodal').on('hidden.bs.modal', function () {
      $('#postmodal .modal-content').empty();
    });

    $('.special.cards .image').dimmer({
      on: 'hover'
    });
  });
</script>
