<% @user.each_slice(3) do |users| %>
  <% users.each do |user| %>
    <div class="col-md-4 col-sm-4" style="margin-top:25px;">
      <div class="following">
        <div class="following-posts">
          <% user.mypost.limit(4).each do |post| %>
            <div class="following-post">
              <%= link_to image_tag(post.image.url(:post) , :class => 'following-postimg'),post %>
            </div>
          <% end %>
        </div>
        <%= link_to image_tag(user.avatar.url(:avatar) , :class => 'following-avatar'),user %>
        <br><p class="text-center"><%= link_to user.name , user %></p>
        <br><p class="text-center"><%= user.about %></p><br>
        <%= render'followbtn', user: user %>
      </div>
    </div>
  <% end %>
<% end %>
