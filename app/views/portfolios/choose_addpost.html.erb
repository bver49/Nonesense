<% if current_user.id == @portfolio.user_id %>
  <div class="portfolio-btnbar">
    <%= link_to '返回',@portfolio,:class =>"btn btn-default" %>
  </div>
<% end %>
<% @post.each_slice(4) do |posts| %>
  <% posts.each do |post| %>
    <div class="col-md-3 col-sm-3" style="margin-top:25px;" id="post-<%= post.id %>">
      <div class="portfolio">
        <div class="portfolio-posts">
          <%= link_to image_tag(post.image.url(:post) , :class => 'portfolio-editpostimg'),post %>
        </div>
        <br><p class="text-center"><%= link_to '加入', addpost_path(id: post.id,portfolio_id: @portfolio.id ) ,:class => "btn btn-default", method: :put, remote: true %></p>
      </div>
    </div>
  <% end %>
<% end %>
